// WIP: High-priority events for case triage
// Surfaces events worth triaging first (e.g. rare severity, multiple alerts same host).
// Relevant to: case triage meetings; contribute to more rapid customer solutions

let Lookback = 24h;
DeviceAlertEvents
| where Timestamp > ago(Lookback)
| summarize AlertCount = count(), FirstSeen = min(Timestamp), LastSeen = max(Timestamp) by DeviceName, AlertTitle, Severity
| where AlertCount >= 1
| order by Severity desc, AlertCount desc
